{
  "name": "merge-claude-code-settings",
  "version": "0.1.0",
  "description": "A TypeScript utility that merges Claude Code settings from multiple project-specific configuration files into the global settings file",
  "author": "Masaya Suzuki <suzukimasaya428@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/massongit/merge-claude-code-settings.git"
  },
  "keywords": [
    "claude",
    "cli",
    "typescript"
  ],
  "type": "module",
  "bin": {
    "merge-claude-code-settings": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && bun run scripts/add_shebang.ts",
    "dev": "bun run index.ts",
    "fix": "prettier --write ."
  },
  "devDependencies": {
    "@proofdict/textlint-rule-proofdict": "3.1.2",
    "@textlint-ja/textlint-rule-no-insert-dropping-sa": "2.0.1",
    "@types/node": "25.0.3",
    "@types/yargs": "17.0.35",
    "node-fetch": "2.6.12",
    "prettier": "3.7.4",
    "textlint": "15.5.0",
    "textlint-filter-rule-comments": "1.2.2",
    "textlint-rule-abbr-within-parentheses": "1.0.2",
    "textlint-rule-footnote-order": "1.0.3",
    "textlint-rule-ja-hiragana-fukushi": "1.3.0",
    "textlint-rule-ja-hiragana-hojodoushi": "1.1.0",
    "textlint-rule-ja-hiragana-keishikimeishi": "1.1.0",
    "textlint-rule-no-dead-link": "6.1.0",
    "textlint-rule-no-mixed-zenkaku-and-hankaku-alphabet": "1.0.1",
    "textlint-rule-prefer-tari-tari": "1.0.3",
    "textlint-rule-preset-ja-spacing": "2.4.3",
    "textlint-rule-preset-ja-technical-writing": "12.0.2",
    "textlint-rule-terminology": "5.2.16",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "yargs": "^17.7.2"
  }
}
